<div class="tabsContent" id="tabs-1">
    {{ form_label(form.referencement.title, "Meta title *") }}
    {{ form_errors(form.referencement.title) }}
    {{ form_widget(form.referencement.title, {'attr': {'class': 'form-elem big'}}) }}

    {{ form_label(form.referencement.description, "Meta description *") }}
    {{ form_errors(form.referencement.description) }}
    {{ form_widget(form.referencement.description, {'attr': {'class': 'form-elem big'}}) }}
</div>

<div class="tabsContent" id="tabs-2">
    {{ form_label(form.referencement.ogtitle, "og:title") }}
    {{ form_errors(form.referencement.ogtitle) }}
    {{ form_widget(form.referencement.ogtitle, {'attr': {'class': 'form-elem big'}}) }}

    {{ form_label(form.referencement.ogdescription, "og:description") }}
    {{ form_errors(form.referencement.ogdescription) }}
    {{ form_widget(form.referencement.ogdescription, {'attr': {'class': 'form-elem big'}}) }}

    {{ form_label(form.referencement.ogurl, "og:url") }}
    {{ form_errors(form.referencement.ogurl) }}
    {{ form_widget(form.referencement.ogurl, {'attr': {'class': 'form-elem big'}}) }}

    {% if data.referencement.ogimage is not null %}
        <div id="ajaxImage1">
            <div class="form-image big">
                <img src="{{ asset('img/referencement/og/' ~ data.referencement.ogimage) }}">
                <br>
                <a href="{{ path('admin_referencement_supprimer_ogimage',{'id': data.referencement.id}) }}" class="btn rouge sweetDeleteImage" data-parent="ajaxImage1"><i class="fa fa-trash"></i> Supprimer</a>
            </div>
        </div>
    {% endif %}

    {{ form_label(form.referencement.fileogimage, "og:image") }}
    {{ form_errors(form.referencement.fileogimage) }}
    {{ form_widget(form.referencement.fileogimage, {'attr': {'class': 'form-elem big'}}) }}
</div>
