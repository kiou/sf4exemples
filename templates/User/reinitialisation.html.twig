{% extends "General/Layout/layout.html.twig" %}

{% block metaTitle %}{{ 'reinitialisation.metatitle'|trans }}{% endblock %}

{% block breadcrumb %}
    {{ include("General/Include/breadcrumb.html.twig", {'breadcrumb':breadcrumb }) }}
{% endblock %}

{% block contentTitle %}
    <h1>{{ 'reinitialisation.title'|trans }}</h1>
{% endblock %}

{% block content %}

    {{ form_start(form, {'attr': {'class': 'form-horizontal', novalidate: 'novalidate'}}) }}

        {{ form_errors(form) }}

        {{ form_label(form.email, 'user.label.email'|trans ) }}
        {{ form_errors(form.email) }}
        {{ form_widget(form.email, {'attr': {'class': 'form-elem big'}}) }}<br>

        {{ form_widget(form.Enregistrer, {
            'attr' : {'data-btn': 'reinitialisation.label.submit'|trans, 'class' : 'btn' },
            'label' : 'reinitialisation.label.submit'|trans
        }) }}

        {{ form_rest(form) }}

    {{ form_end(form) }}

{% endblock %}